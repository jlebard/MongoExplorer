 <div data-role="dialog,draggable" data-close-button="true" class="padding10 bg-white fg-black" id="dialog_createCollection" >   
     <h1>Create Collection</h1>   
     <hr>   
     <div class="margin20 bg-white float-left" style="z-index:2050">
         <div class="input-control bg-white" data-template-result="fmtState2" style="width:80%" data-role="select">
             <label>Select Database </label>   
             <select id="FormCreateCollection-database" style="width:95%">  
                {% for database in data.databases.list %}
                     <option value="{{ database.name }}">{{ database.name }}</option>  

                {% endfor %}
                 </select>   
             </div>

         <div class="clear-float clearfix" style="margin-top:10px"></div>
         <hr style="height: 1px" class="clear-float clearfix clearall">

             <div class="margin20 bg-white"></div>
             <div class=" bg-white input-control text margin10">
                <label>Name</label>  
                <span class="mif-folder prepend-icon"></span>  
                <input id="FormCreateCollection-collection" name="FormCreateCollection-collection" type="text" placeholder="Collection Name">  
             </div>

         <div class="clear-float clearfix" style="margin-top:20px"></div>
         <hr class="clear-float clearfix clearall">
         <div class="button-group bg-white">
             <button onclick="savethisform('collection')" class="button small-button success">Save !</button>
             <button id="showmenuoptions" onclick="showOptionsMenuCreateCollection()" class="button small-button Primary">Options</button>
             <button onclick="clearthisform('collection')" class="button small-button warning">Clear</button>
         </div>
        <div class="margin10"></div>

     </div>
        <div id="FormCreateCollection-options-menu" class="float-left bg-white margin20" style="display: none; z-index:2010; overflow:hidden ;">
            <label class=" bg-white input-control margin10 checkbox">  
                <input id="FormCreateCollection-capped"  name="FormCreateCollection-capped" type="checkbox">
                <span class="check"></span>  
                <span class="caption">Capped ?</span>  
                </label>


            <hr class="clear-float clearfix clearall">
            <div class="input-control bg-white text margin10" data-role="keypad" data-keys="1,2,3,4,5,6,7,8,9,0,*">
                <label></label>
                <span class="mif-drive prepend-icon"></span>
                <input id="FormCreateCollection-size" name="FormCreateCollection-size" type="text" placeholder="size * 1024">
            </div>

            <div class="clear-float clearfix" style="margin-top:10px"></div>
            <hr class="clear-float clearfix clearall">
            <div class="input-control bg-white text margin10" data-role="keypad">
                <label></label>
                <span class="mif-file-code prepend-icon"></span>
                <input id="FormCreateCollection-max" name="FormCreateCollection-max" type="text" placeholder="Max Documents">
            </div>

            <div class="clear-float clearfix" style="margin-top:10px"></div>
            <hr class="clear-float clearfix clearall">


            <label class="margin10 bg-white input-control checkbox">
                <input  name="FormCreateCollection-autoIndexId" id="FormCreateCollection-autoIndexId" type="checkbox" checked>
                <span class="check"></span>
                <span class="caption">Auto Index Id ?</span>
            </label>
        </div>



 </div>


   <div data-role="dialog,draggable" style="min-width:500px" data-close-button="true" class="padding10 bg-white fg-black" id="dialog_createDocument" >      
