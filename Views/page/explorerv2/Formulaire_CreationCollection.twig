                     {% endfor %}
                    </optgroup>
                     {% endfor %}
               </select></div>      
           </div> 
       <hr class="margin20"> 
       <div class="margin20">      
           </div> 

       <div id="editor_createDocument" class="bg-white"></div>      

   </div>
 
 
  <div data-role="dialog,draggable" data-close-button="true" class="padding10 bg-white fg-black" id="dialog_createDatabase" >
     <h1>Create Database</h1>
     <hr>

     <div class="margin20 bg-white">
         <div class="input-control text margin10 float-left">
             <label>Name</label>

             <span class="mif-database prepend-icon"></span>


             <input data-validate-func="minlength"
                    data-validate-arg="8"
                    data-validate-hint="This field must contains min 6 characters!"
                    class="required" id="FormCreateDatabase-database" name="FormCreatedatabase-database" type="text" placeholder="Database's Name">

         </div>
         <br>
         <div id="FormCreateDatabase-databaseError" style="right:-150px;top:110px; height: auto;max-height: 50px;z-index:2000;width:200px;padding-top:5px;" class="hidden pos-abs popover marker-on-left bg-red fg-white float-left">
             <div  class="fg-white"></div>
         </div>

         <div class="clear-float clearfix" style="margin-top:20px"></div>
         <hr style="height: 1px" class="clear-float clearfix clearall">
         <div class="clear-float clearfix" style="margin-top:20px"></div>


         <div class="input-control text margin10 float-left" >
             <label>Need to create a collection</label>
             <span class="mif-folder prepend-icon"></span>
             <input  data-validate-func="minlength"
                     data-validate-arg="8"
                     data-validate-hint="This field must contains min 6 characters!"

                     class="required" id="FormCreateDatabase-collection" name="FormCreatedatabase-collection" type="text" placeholder="Collection's Name">
         </div>
         <br>
         <div id="FormCreateDatabase-collectionError" style="right:-150px;top:200px; height: auto;max-height: 50px;z-index:2000;width:200px;padding-top:5px;" class=" hidden pos-abs popover marker-on-left bg-red fg-white float-left">
             <div  class="fg-white">This Database Name exist</div>
         </div>


         <div class="clear-float clearfix" style="margin-top:20px"></div>
         <hr style="height: 1px" class="clear-float clearfix clearall">

         <button onclick="savethisform('database')" class="button success">Record</button>
         <button onclick="clearthisform('database')" class="button warning">Clear</button>


     </div>
 </div>




 <div data-role="dialog,draggable" data-close-button="true" class="padding10 bg-white fg-black" id="dialog_dropDatabase" >
